<%= link_to '戻る', 'javascript:history.back()', class: 'back-link' %>
<div class="room-details">
  <%= image_tag @room.image.attached? ? @room.image : 'room.png', class: 'room-image' %>
  <h1><%= @room.name %></h1>
  <p><%= @room.address %></p>
  <p><%= @room.area %></p>
  <p>★★★★★</p>
  <p><%= @room.description %></p>
  <p>¥<%= @room.price %>~/日</p>

  <div class="booking-section">
  <% if user_signed_in? %>
   <%= form_with model: @reservation, url: confirm_room_reservations_path(@room), method: :post do |f| %>
   <%= f.hidden_field :check_in, value: params[:check_in] %>
   <%= f.hidden_field :check_out, value: params[:check_out] %>
   <%= f.hidden_field :guests, value: params[:guests] %>
   <%= f.hidden_field :room_id, value: @room.id %>
   <p>チェックイン: 
    <%= f.date_field :check_in, min: Date.today.to_s, value: @reservation.check_in %>
   </p>

    <p>チェックアウト: 
     <%= f.date_field :check_out, min: Date.today.to_s, value: @reservation.check_out %>
    </p>

    <p>人数: 
      <%= f.number_field :guests, min: 1, value: @reservation.guests %>
    </p>

   <%= f.submit '予約確認', class: 'btn btn-primary' %>
 <% end %>


 <% else %>
    <%= link_to 'ログイン', new_user_session_path, class: 'login-button' %>
  <% end %>
</div>

