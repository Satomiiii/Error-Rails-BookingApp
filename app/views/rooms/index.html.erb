<h2 class="page-title">登録済み一覧</h2>

<table class="styled-table">
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.image.attached? ? room.image : 'room.png', size: '100x100', class: 'table-image' %></td>
        <td><%= link_to room.name, room_path(room), class: 'room-link' %></td>
        <td><%= truncate(room.description, length: 60) %></td>
        <td>¥<%= number_with_delimiter(room.price) %>~</td>
        <td><%= room.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
