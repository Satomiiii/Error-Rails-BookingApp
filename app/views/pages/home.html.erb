 <!-- 検索フォーム -->
  <%= form_with url: search_rooms_path, method: :get, local: true do %>
    <div style="margin-bottom: 10px;">
      <%= label_tag :area, 'エリア' %>
      <%= text_field_tag :area, params[:area].to_s.strip.gsub(/[[:space:]]|\u3000/, ''), placeholder: '例：東京' %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= label_tag :keyword, 'キーワード' %>
      <%= text_field_tag :keyword, params[:keyword].to_s.strip.gsub(/[[:space:]]|\u3000/, ''), placeholder: '例：ホテル' %>
    </div>

    <%= submit_tag '検索' %>
  <% end %>
</div>

