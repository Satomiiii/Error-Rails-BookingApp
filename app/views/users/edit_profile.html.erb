<div class="profile-settings">
  <h2>プロフィール</h2>
  <%= form_for(@user, url: update_profile_user_path(@user), method: :patch, html: { multipart: true }) do |f| %>
    <div>
     <%= f.label :icon, 'アイコン画像' %> <!-- ← avatar → icon -->
      <%= f.file_field :icon %>
    </div>
    <div>
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, required: true %>
    </div>
    <div>
      <%= f.label :introduction, '自己紹介' %>
      <%= f.text_area :introduction %>
    </div>
    <%= f.submit '保存', class: 'save-button' %>
    <%= link_to 'キャンセル', user_path(@user), class: 'cancel-button' %>
  <% end %>
</div>
